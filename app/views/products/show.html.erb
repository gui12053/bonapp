<section class="content-show-product">
  <div class="container-fluid show-product-main">
    <div class="row show-product-row">
      <div class="col-xs-6 col-sm-6 col-lg-4 col-xl-4 show-image-col">
        <%= image_tag(@product.image_url, class: "img-fluid product-show-image") %>
      </div>
      <div class="col show-product-col">
         <div class="product-edit-title"
           <h5><%= @product.name %><h5>
         </div>
         <div class="description">
           <strong>Description:</strong>
           <%= @product.description %>
        </div>
        <div class="price">
          Price:
          <%= number_to_currency(@product.price, :unit => "Â£") %>
        </div>
        <%= form_with(url: '/payments/create') do |form| %>
          <%= render partial: "shared/stripe_checkout_button" %>
        <% end %>
        <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>
        <% if @product.comments.length > 0 %>
        <%= @product.highest_rating_comment.body %>
        <% end %>
        <p>
          <%= render 'new_comment' %>
        </p>
        <%= render 'comments' %>
        <%= will_paginate @comments %>
      </div>
    </div>
  </div>
</section>
