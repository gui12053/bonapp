<h1>Products</h1>
<%= @test_variable %>
<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm">
        <a href="#"><h1><td><%= product.name %></td></h1></a>
        <p><td><%= image_tag(product.image_url, class: "img-fluid") %></td></p>
        <p><td><%= product.description %></td></p>
        <p><td><%= link_to 'Show', product %></td></p>
        <p><td><%= link_to 'Edit', edit_product_path(product) %></td></p>
        <p><td><%= product.price %></td></p>

      </div><!-- /col -->
    <% end %>
  </div>
</div>
<br>

<%= link_to 'New Product', new_product_path %>
