<p id="notice"><%= notice %></p>
<h1>Products</h1>

<div class="container-fluid">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-2 col-md-4">
        <h2><%=link_to product.name, product %></h2>
        <%= image_tag(product.image_url, class: "img-responsive") if product.image_url %>
        <dl><%= product.description %></dl>
          <dl>
            <strong>Available color:</strong><%= product.color %></dl>

          <%= link_to 'Show', product %>
          <%= link_to 'Edit', edit_product_path(product) %>
          <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
            <% end %>
          </div>
    <br>
      <%= link_to 'New Product', new_product_path, :class => "new-product" %>

</div>
